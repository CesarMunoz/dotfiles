[user]
	name = Cesar Munoz
	email = cesar.t.munoz@gmail.com
[credential]
	helper = osxkeychain
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = auto
[gc]
  auto=1
[merge]
  summary=true
[alias]
  tree = log --oneline --decorate --all --graph --simplify-by-decoration
  st = status
  cho = checkout
  chb = checkout -b
  history = --all --date -order $(git reflog --pretty=%H)
  br = branch
  unstage = reset HEAD
  uncommit = reset --soft HEAD^
[core]
	editor = subl -n -w
[push]
	default = current
[merge]
  tool = subl
[diff]
  tool = subl
